</script>
<script type="text/javascript">
    var StaticPageCount = 10;//页面显示条数
    var pageIndex = 0;//当前页面数   第0页为初始页面
    var count = 0; //返回的记录数
    var remainder = 0;

    var time = 2;//时间排序参数
    var Age = 1;//年龄排序参数

    // ios
    $(function () {
        var $iosActionsheet = $('#iosActionsheet');
        var $iosMask = $('#iosMask');

        function hideActionSheet() {
            $iosActionsheet.removeClass('weui-actionsheet_toggle');
            $iosMask.fadeOut(200);
        }
        $iosMask.on('click', hideActionSheet);
        $('#iosActionsheetCancel').on('click', hideActionSheet);
        //$("#showIOSActionSheet").on("click", function () {
        //    $iosActionsheet.addClass('weui-actionsheet_toggle');
        //    $iosMask.fadeIn(200);
        //});
    });

    $(function () {
        if ('@ViewBag.State' == '1') {
            var $iosDialog2 = $('#iosDialog2');
            $iosDialog2.fadeIn(200);
        }

        PatienttListBind();
    });
    //加载更多
    $(function () {
        var loading = false;  //状态标记
        $(document.body).infinite().on("infinite", function () {
            var loadmore = document.getElementById("loadmore");
            var nomore = document.getElementById("nomore");
            remainder = count % StaticPageCount;
            if (remainder == 0 && (parseInt(count / StaticPageCount) == pageIndex) || remainder != 0 && (Math.ceil(count / StaticPageCount) == pageIndex)) {
                setTimeout(function () {
                    loadmore.style.display = "none";
                    nomore.style.display = "";
                }, 1500);   //模拟延迟
                return;
            }
            else {
                loadmore.style.display = "";
            }
            if (loading) return;
            var flag = false;
            loading = true;
            setTimeout(function () {
                PatienttListBind();
                loading = false;
            }, 1500);   //模拟延迟
            loadmore.style.display = "none";
        });
    })
    //绑定数据
    function PatienttListBind() {
        var openid = '@ViewBag.OpenID';
        $.post('@Url.Action("GetPatientList", "WXMain")',
                {
                    openid: openid,
                    time: time,
                    Age: Age,
                    pageIndex: pageIndex,
                    pageCount: StaticPageCount,
                },
                function (data) {
                    var jsonData = JSON.parse(data.JsonData);
                    count = data.Total;
                    var htmlData = "";
                    
                    if (jsonData != null && jsonData.length > 0) {
                        for (var i = 0; i < jsonData.length; i++) {

                            htmlData += "<label class=\"weui-cell weui-check__label\" for=\"s" + jsonData[i].PatientID + "\">";
                            htmlData += "<div class=\"weui-cell__hd\">";
                            htmlData += "<input type=\"checkbox\" class=\"weui-check\" name=\"checkbox1\" id=\"s" + jsonData[i].PatientID + "\"  value=" + jsonData[i].PatientID + " />";
                            htmlData += "<i class=\"weui-icon-checked\"></i>";
                            htmlData += "</div>";

                            htmlData += "<a style=\"color:black;\" class=\"\" href=\"/WXMain/ReportList?PatientID=" + jsonData[i].PatientID + "&openid=" + openid + "\">";
                            
                            htmlData += "<div class=\"weui-cell__bd\">";
                            htmlData += "<p>姓名:" + jsonData[i].PatientNM + "&nbsp&nbsp年龄: " + jsonData[i].Age + "</p>";
                            htmlData += "<p>最近就诊时间:" + jsonData[i].CheckTime + "</p>";
                            htmlData += "</div>";
                            htmlData+="<div class=\"weui-cell__ft\"></div>";
                            htmlData += " </a>";
                            htmlData += "</label>";

                            $('#maincontent').append(htmlData);
                            htmlData = "";
                        }
                    }
                    else
                    {
                        var $iosDialog2 = $('#iosDialog2');
                        $iosDialog2.fadeIn(200);
                    }
                    pageIndex = pageIndex + 1;
                    remainder = count % StaticPageCount;

                    if (remainder == 0 && (parseInt(count / StaticPageCount) == pageIndex) || remainder != 0 && (Math.ceil(count / StaticPageCount) == pageIndex)) {
                        loadmore.style.display = "none";
                        nomore.style.display = "";
                        return;
                    }
                });
    }
    function ascendAge() {

        $("#ascendAge").attr("onclick", "");
        $("#ascendTime").attr("onclick", "");
        loadmore.style.display = "";
        nomore.style.display = "none";
        $('#maincontent').empty();
        setTimeout(function () {
            $("#ascendAge").attr("onclick", "ascendAge();");
            $("#ascendTime").attr("onclick", "ascendTime();");
        }, 2000);   //模拟延迟
        setTimeout(function () {
            if (Age == 0) {
                Age = 1;//姓名排序参数
                $('#ascendAge').html('按年龄↓');
            }
            else {
                Age = 0;//姓名排序参数
                $('#ascendAge').html('按年龄↑');
            }

            var $iosMask = $('#iosMask');
            var $iosActionsheet = $('#iosActionsheet');
            $iosActionsheet.removeClass('weui-actionsheet_toggle');
            $iosMask.fadeOut(200);

            time = 2;//时间排序参数
            pageIndex = 0;
            loadmore.style.display = "none";
            nomore.style.display = "none";
            $('#maincontent').empty();
            PatienttListBind();
        }, 1000);   //模拟延迟

    }
    function ascendTime() {
        $("#ascendAge").attr("onclick", "");
        $("#ascendTime").attr("onclick", "");
        loadmore.style.display = "";
        nomore.style.display = "none";
        $('#maincontent').empty();
        setTimeout(function () {
            $("#ascendAge").attr("onclick", "ascendAge();");
            $("#ascendTime").attr("onclick", "ascendTime();");
        }, 2000);   //模拟延迟

        setTimeout(function () {
            if (time == 0) {
                time = 1;//姓名排序参数
                $('#ascendTime').html('按时间↓');
            }
            else {
                time = 0;//姓名排序参数
                $('#ascendTime').html('按时间↑');
            }

            var $iosMask = $('#iosMask');
            var $iosActionsheet = $('#iosActionsheet');
            $iosActionsheet.removeClass('weui-actionsheet_toggle');
            $iosMask.fadeOut(200);

            Age = 2;//姓名排序参数
            pageIndex = 0;
            loadmore.style.display = "none";
            nomore.style.display = "none";
            $('#maincontent').empty();
            PatienttListBind();
        }, 1000);   //模拟延迟
    }

    function isRemoveReport() {

        var obj = document.getElementsByName('checkbox1');
        var patientid = '';
        for (var i = 0; i < obj.length; i++) {
            if (obj[i].checked) {
                patientid += obj[i].value + ','; //如果选中，将value添加到变量s中 
            }
        }
        if (patientid == "") {
            var noChoose = $('#noChoose');
            noChoose.fadeIn(200);
            return;
            //
        }


        var isRemove = $('#isRemove');
        isRemove.fadeIn(200);
    }


    //解绑功能
    function removeReport() {
        //获取checkbox所有值
        var isRemove = document.getElementById("isRemove");
        isRemove.style.display = "none";
        var obj = document.getElementsByName('checkbox1');
        var patientid = '';
        for (var i = 0; i < obj.length; i++) {
            if (obj[i].checked) {
                patientid += obj[i].value + ','; //如果选中，将value添加到变量s中 
            }
        }
        if (patientid == "") {
            var noChoose = $('#noChoose');
            noChoose.fadeIn(200);
            return;
            //
        }
            //post请求
            $.post('@Url.Action("RemoveReport", "WXMain")',
                    {
                        patientid: patientid,
                    },
                    function (data) {
                        if (data == 1) {
                            //成功
                            //location.reload();
                            loadmore.style.display = "";
                            nomore.style.display = "none";
                            $('#maincontent').empty();
                            setTimeout(function () {
                                pageIndex = 0;
                                loadmore.style.display = "none";
                                nomore.style.display = "none";
                                $('#maincontent').empty();
                                PatienttListBind();
                            }, 1000);   //模拟延迟
                        }
                        else {
                            //失败
                            alert("绑定失败");
                            return;
                        }
                    });
        
    }

    // toast
    $(function(){
        var $toast = $('#toast');
        $('#showToast').on('click', function(){
            if ($toast.css('display') != 'none') return;

            $toast.fadeIn(100);
            setTimeout(function () {
                $toast.fadeOut(100);
            }, 2000);
        });
    });

    // loading
    $(function(){
        var $loadingToast = $('#loadingToast');
        $('#showLoadingToast').on('click', function(){
            if ($loadingToast.css('display') != 'none') return;

            $loadingToast.fadeIn(100);
            setTimeout(function () {
                $loadingToast.fadeOut(100);
            }, 2000);
        });
    });


    function noChoseClick() {
        var noChoose = document.getElementById("noChoose");
        noChoose.style.display = "none";
    }
    function isRemoveClick() {
        var isRemove = document.getElementById("isRemove");
        isRemove.style.display = "none";
    }

    
</script>
